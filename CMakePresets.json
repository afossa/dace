{
  "version": 8,
  "configurePresets": [
    {
      "name": "cpp-linux",
      "hidden": false,
      "displayName": "DACE C++ (Linux)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "$env{HOME}/.local",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_INSTALL_PREFIX": "$env{HOME}/.local",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "WITH_PTHREAD": "ON",
        "WITH_ALGEBRAICMATRIX": "ON",
        "WITH_EIGEN": "ON",
        "WITH_JULIA": "OFF"
      }
    },
    {
      "name": "cpp-macos",
      "hidden": false,
      "displayName": "DACE C++ (MacOS)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "$env{HOME}/.local",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_INSTALL_PREFIX": "$env{HOME}/.local",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "WITH_PTHREAD": "ON",
        "WITH_ALGEBRAICMATRIX": "ON",
        "WITH_EIGEN": "ON",
        "WITH_JULIA": "OFF"
      }
    },
    {
      "name": "julia-linux",
      "hidden": false,
      "displayName": "DACE Julia (Linux)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "$env{JULIA_DEPOT_PATH}/dev/DACE_jll/override",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "gcc",
        "CMAKE_CXX_COMPILER": "g++",
        "CMAKE_INSTALL_PREFIX": "$env{JULIA_DEPOT_PATH}/dev/DACE_jll/override",
        "CMAKE_PREFIX_PATH": "$env{JULIA_DEPOT_PATH}/dev/libcxxwrap_julia_jll/override",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "WITH_PTHREAD": "ON",
        "WITH_ALGEBRAICMATRIX": "ON",
        "WITH_EIGEN": "ON",
        "WITH_JULIA": "ON",
        "CUSTOM_EXIT": "ON"
      }
    },
    {
      "name": "julia-macos",
      "hidden": false,
      "displayName": "DACE Julia (MacOS)",
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "installDir": "$env{HOME}/.julia/dev/DACE_jll/override",
      "cacheVariables": {
        "CMAKE_C_COMPILER": "/usr/bin/clang",
        "CMAKE_CXX_COMPILER": "/usr/bin/clang++",
        "CMAKE_INSTALL_PREFIX": "$env{HOME}/.julia/dev/DACE_jll/override",
        "CMAKE_PREFIX_PATH": "$env{HOME}/.julia/dev/libcxxwrap_julia_jll/override",
        "CMAKE_BUILD_TYPE": "Release",
        "CMAKE_EXPORT_COMPILE_COMMANDS": "ON",
        "WITH_PTHREAD": "ON",
        "WITH_ALGEBRAICMATRIX": "ON",
        "WITH_EIGEN": "ON",
        "WITH_JULIA": "ON",
        "CUSTOM_EXIT": "ON"
      }
    }
  ],
  "buildPresets": [
    {
      "name": "cpp-linux",
      "displayName": "DACE C++ (Linux)",
      "configurePreset": "cpp-linux"
    },
    {
      "name": "cpp-macos",
      "displayName": "DACE C++ (MacOS)",
      "configurePreset": "cpp-macos"
    },
    {
      "name": "julia-linux",
      "displayName": "DACE Julia (Linux)",
      "configurePreset": "julia-linux"
    },
    {
      "name": "julia-macos",
      "displayName": "DACE Julia (MacOS)",
      "configurePreset": "julia-macos"
    }
  ]
}
